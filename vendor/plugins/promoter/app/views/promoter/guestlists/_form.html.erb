<% form_tag '/guestlists', :remote => true,
  :loading => "Element.show('indicator');",
  :complete => "Element.hide('indicator');" do -%>
	
	<div id="error">
		<% if flash[:error] %>
			Something went wrong<br />
			<div id="error"><%= flash[:error] %></div>
		<% else %>
			Please select an event date and fill out the form below to be placed on the guest list.
		<% end %>
	</div>
			
<table width="100%" border="0" cellspacing="10">
<tr>
  <td width="28%" align="right">Event</td>
  <td width="72%"><%= EventSelect.tag.html_safe %>
    <span>*</span></td>
</tr>
<tr>
  <td width="28%" align="right">First Name</td>
  <td width="72%"><input type="text" name="first" id="first" />
    <span>*</span></td>
  </tr>
<tr>
  <td align="right">Last Name</td>
  <td><input type="text" name="last" id="last" />
    <span>*</span></td>
  </tr>
<tr>
  <td align="right">Phone</td>
  <td><input type="text" name="phone" id="phone" /></td>
  </tr>
<tr>
  <td align="right">Email</td>
  <td><input type="text" name="email" id="email" />
    <span>*</span></td>
  </tr>
<tr>
  <td align="right">Confirm Email</td>
  <td><input type="text" name="email_confirm" id="email_confirm" />
    <span>*</span></td>
  </tr>
<tr>
  <td align="right"># Guests</td>
  <td width="72%">	<select name="extra_count" id="extra_count">
    <option value="1">+1</option>
    <option value="2">+2</option>
    <option value="3">+3</option>
    <option value="">no guests</option>
  </select>
    <span>*</span></td>
  </tr>
<tr>
  <td align="right">&nbsp;</td>
  <td><br />
    <span>* </span><span class="norm_grey">Required Field </span>
    <p class="norm_grey"><span>* </span>By submitting your information you agree to the use of your contact information for marketing purposes.</p>
    <br />
    <br />
    <%= submit_tag 'submit', :id => 'create' %>
	<%= image_tag 'indicator.gif', :id => 'indicator', :style => 'display: none;' %><br />
    <br /></td>
  </tr>
</table>

<% end %>